{
  "name": "@denoland-id/registry",
  "description": "List of Deno modules made by local developers ðŸ‡®ðŸ‡©",
  "version": "1.0.0",
  "repository": "git@github.com:denoland-id/registry.git",
  "author": "Griko Nibras <griko@denoland.id>",
  "scripts": {
    "validate": "node scripts/validate",
    "format": "yarn format:index && yarn format:api && yarn format:database",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:api": "prettier --write \"api/**/*.{js,ts}\"",
    "format:database": "prettier --write \"database/*.json\"",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "prepare": "yarn format"
  },
  "devDependencies": {
    "@vercel/node": "^1.6.1",
    "all-contributors-cli": "^6.15.0",
    "husky": "^4.2.5",
    "lint-staged": ">=10",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn validate && yarn contributors:generate && lint-staged"
    }
  },
  "lint-staged": {
    "api/**/*.{js,ts}": [
      "prettier --write"
    ],
    "database/*.json": [
      "prettier --write"
    ],
    "scripts/*.js": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
